@model TestDropdown.Models.Student

@{
    ViewBag.Title = "Index";
}

<h2>Happy to help</h2>

 
    <div class="form-horizontal" id="main">
        <h4>Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group dropdownDiv" id="newdropdown">
            @Html.LabelFor(model => model.StudentName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" >
                @Html.DropDownListFor(model => model.StudentId, @ViewBag.Student as SelectList, "Select Student", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="AddDropDown" value="Add" class="btn btn-primary" />
            </div>
        </div>
        
    </div>
    


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts{
<script type="text/javascript">
    $(function () {
    

        $('#AddDropDown').click(function (event) {
            event.preventDefault();
            var $anotherDiv = $('.dropdownDiv:last').after($('#newdropdown').clone().removeAttr('id').show());
        });
    
    });
</script>
    
}
